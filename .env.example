# Environment Configuration Example
# Copy this file to .env and fill in your values
# DO NOT commit .env files with actual secrets to version control

# ============================================================================
# DJANGO SETTINGS
# ============================================================================

# Secret key for Django (REQUIRED)
# Generate new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Debug mode (REQUIRED)
# Set to True for development, False for production
DEBUG=True

# Allowed hosts (REQUIRED)
# Comma-separated list of domains
ALLOWED_HOSTS=localhost,127.0.0.1

# Environment name (OPTIONAL)
# Used for Sentry and logging
DJANGO_ENVIRONMENT=development


# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Option 1: Use DATABASE_URL (Railway, Heroku, etc.)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual settings (local development)
DB_NAME=election_cart
DB_USER=postgres
DB_PASSWORD=your_password
DB_HOST=localhost
DB_PORT=5432


# ============================================================================
# CORS SETTINGS
# ============================================================================

# Allowed origins for CORS (REQUIRED)
# Comma-separated list of frontend URLs
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173


# ============================================================================
# FIREBASE SETTINGS
# ============================================================================

# Path to Firebase service account JSON file (REQUIRED if using Firebase)
FIREBASE_CREDENTIALS_PATH=firebase-credentials.json


# ============================================================================
# RAZORPAY SETTINGS
# ============================================================================

# Razorpay API credentials (REQUIRED for payments)
# Development: Use test keys (rzp_test_...)
# Production: Use live keys (rzp_live_...)
RAZORPAY_KEY_ID=rzp_test_YOUR_KEY_HERE
RAZORPAY_KEY_SECRET=YOUR_SECRET_HERE


# ============================================================================
# CLOUDINARY SETTINGS
# ============================================================================

# Cloudinary credentials (REQUIRED for image uploads)
# Get from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret


# ============================================================================
# SENTRY ERROR TRACKING
# ============================================================================

# Sentry DSN (OPTIONAL but recommended for production)
# Get from: https://sentry.io project settings
# Only active when DEBUG=False
# SENTRY_DSN=https://your-key@o123456.ingest.sentry.io/123456

# Sentry release version (OPTIONAL)
# SENTRY_RELEASE=v1.0.0


# ============================================================================
# NOTES
# ============================================================================

# Security:
# - Never commit .env files with actual secrets
# - Rotate all secrets for production
# - Use different keys for development and production
# - Keep Razorpay test keys in development

# Production:
# - Set DEBUG=False
# - Use DATABASE_URL for managed databases
# - Use live Razorpay keys
# - Configure SENTRY_DSN for error tracking
# - Set ALLOWED_HOSTS to your domain

# Development:
# - Set DEBUG=True
# - Use local database settings
# - Use Razorpay test keys
# - Sentry is optional
